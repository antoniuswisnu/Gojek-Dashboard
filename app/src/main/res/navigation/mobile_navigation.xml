<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.gojekdashboard.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_promo"
        android:name="com.example.gojekdashboard.ui.promo.PromoFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_promo" />

    <fragment
        android:id="@+id/navigation_order"
        android:name="com.example.gojekdashboard.ui.orders.OrdersFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_orders" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.gojekdashboard.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />
</navigation>